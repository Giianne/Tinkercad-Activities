void loop()
{
  Serial.print("What Music do you want the program to hear on?\n");
  Serial.print("Please choose one music below\n");
  Serial.print("List:\n");
  Serial.print("Input 1 - Fireflies\n");
  Serial.print("Input 2 - Welcome to the black parade\n");
  Serial.print("Input 3 - River flows in you\n");
  Serial.print("Input 4 - We are one (The Lion King)\n");
  Serial.print("Input 5 - Havana\n");
  
 	while (Serial.available() == 0)
    {  
    }
  	choice = Serial.parseInt();
  
 	switch (choice) {
  case 1:
     Song1();
    break;
  case 2:
      Song2();
    break;
    case 3:
      Song3();
      break;
  case 4:
      Song4();
      break;
  case 5:
      Song5();
      break;
  
}
}
